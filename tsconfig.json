{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noEmit": true,
        "jsx": "react",
        "strictPropertyInitialization": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true
    }
}
